  <canvas id="villeDepartChart"></canvas>
{% endblock %}

{% block javascript %}
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script>
    const data = {
      labels: ['Ville d√©part'],
      datasets: [{
        label: 'Nombre de trajets',
        data: [{{ resultats.villeDepart }}],
        backgroundColor: 'rgb(54, 162, 235)',
        borderColor: 'rgb(54, 162, 235)',
        borderWidth: 1
      }]
    };

    const options = {
      scales: {
        y: {
          beginAtZero: true
        }
      }
    };

    const villeDepartChart = new Chart(document.getElementById('villeDepartChart'), {
