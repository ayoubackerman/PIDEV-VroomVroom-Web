{% block body %}

	<style>
		.table {
			width: 80%;
			margin: 50px auto auto;
		}
		.table td,
		.table th {
			padding: 20px;
			border: 1px solid black;
		}
		.table th {
			background-color: #fcfcfc;
			color: #050505;
			font-weight: bold;
			text-transform: uppercase;
			font-size: 0.9rem;
			vertical-align: middle;
		}
		.table td {
			vertical-align: middle;
			font-size: 0.85rem;
		}
		.table img {
			max-height: 100px;
			max-width: 100px;
		}
		.table td:nth-child(odd) {
			font-weight: bold;
			text-transform: capitalize;
		}
	</style>

	<div class="container">
		<h1 class="text-center my-5">
			Detaille Reclamation :</h1>
		<table class="table table-bordered table-hover">
			<tbody>
				<tr>
					<th scope="row">reclamation</th>
					<td>{{ Reclamation.reclamation }}</td>
				</tr>
				<tr>
					<th scope="row">Type reclamation</th>
					<td>{{ Reclamation.typeReclamation }}</td>
				</tr>
				<tr>
					<th scope="row">resolution</th>
					<td>{{ Reclamation.resolution }}</td>
				</tr>


				{#       
				                <img src="{{asset('images/vvvvvv.png')}}">             
				             #}


			</tbody>
		</table>
	</div>

{% endblock %}
