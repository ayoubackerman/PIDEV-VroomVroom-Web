{% extends 'base.html.twig' %}
{% block body %}
	{% block content %}
		<br><br><br><br>
		<h1 class="mb-4">Mes Reclamations</h1>

		<div class="row">
			<div class="col-md-9">
				{% for reclamation in reclamations %}
					{# ... #}
				{% endfor %}

			</div>
			<div class="col-md-3">
				<h4>Mes Statistics</h4>
				<canvas id="chart"></canvas>
			</div>
		</div>

		<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
		<script>
			var stats = {{ stats|json_encode()|raw }};
var labels = [];
var data = [];
stats.forEach(function (stat) {
labels.push(stat.typeReclamation);
data.push(stat.num_reclamations);
});
var ctx = document.getElementById('chart').getContext('2d');
var chart = new Chart(ctx, {
type: 'pie',
data: {
labels: labels,
datasets: [
{
label: 'Number of reclamations',
data: data,
backgroundColor: [
'rgba(255, 99, 132, 0.2)',
'rgba(54, 162, 235, 0.2)',
'rgba(255, 206, 86, 0.2)',
'rgba(75, 192, 192, 0.2)',
'rgba(153, 102, 255, 0.2)',
'rgba(255, 159, 64, 0.2)'
],
borderColor: [
'rgba(255, 99, 132, 1)',
'rgba(54, 162, 235, 1)',
'rgba(255, 206, 86, 1)',
'rgba(75, 192, 192, 1)',
'rgba(153, 102, 255, 1)',
'rgba(255, 159, 64, 1)'
],
borderWidth: 1
}
]
},
options: {
scales: {
yAxes: [
{
ticks: {
beginAtZero: true
}
}
]
}
}
});
		</script>
		<br>
	{% endblock %}
{% endblock %}
